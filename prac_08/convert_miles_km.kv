BoxLayout:
    orientation: "vertical"
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            font_size: 48
            multiline: False
            on_text: app.handle_miles(input_number.text)
        BoxLayout:
            orientation: 'vertical'
            size_hint_max_x: 100
            Button:
                text: "Up"
                on_press: app.handle_increment(input_number.text, 1)
            Button:
                text: "Down"
                on_press: app.handle_increment(input_number.text, -1)
#    Button:
#        text: "Convert miles to km"
#        font_size: 30
#        on_press: app.handle_miles(input_number.text)
    Label:
        id: output_number
        font_size: 48
        color: (1,1,0,1)

